if (title)
    title #{title} - Patrick Gunderson
    meta(name="twitter:title" content=`${title} - Patrick Gunderson`)
    meta(name="og:title" content=`${title} - Patrick Gunderson`)
else 
    title PJG - Patrick Gunderson
    meta(name="twitter:title" content="Patrick Gunderson's Portfolio")
    meta(property="og:title" content="Patrick Gunderson's Portfolio")


meta(name="viewport",content="width=device-width, initial-scale=1, minimum-scale=1")
link(rel="icon", type="image/x-png", href="/images/favicon2.png")
link(rel="stylesheet", href="/css/style.css")

meta(property="og:type" content="website")

if (slug)
    meta(property="og:url" content=`https://patrickgunderson.com/${section}/${slug}`)
    link(rel="canonical" href=`https://patrickgunderson.com/${section}/${slug}`)
else
    meta(property="og:url" content="https://patrickgunderson.com/")
    link(rel="canonical" href=`https://patrickgunderson.com/`)

if (cover_image)
    meta(property="og:image" content=cover_image)
    meta(name="twitter:image" content=cover_image)
else
    meta(property="og:image" content="https://patrickgunderson.com/images/composition-72/main.jpg")
    meta(name="twitter:image" content="https://patrickgunderson.com/images/composition-72/main.jpg")

if (description)
    meta(name="description" property="og:description" content=desription)
    meta(name="twitter:description" content=desription)

else
    meta(name="description" property="og:description" content="A retrospective of a digital creative craftsman.")
    meta(name="twitter:description" content="A retrospective of a digital creative craftsman.")

meta(name="author" property="og:author" content="Patrick Gunderson")


meta(name="twitter:card" content="summary_large_image")
meta(name="twitter:site" content="@gunderson")
