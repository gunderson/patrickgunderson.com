doctype html
html.video-page
	head
		include _head
		link(rel="stylesheet", href="/css/video-page.css")
	body
		include _header
		.media
			.hero(style="background-color:" + background_color)
				video(loop="true" autoplay="true")
					source(src=video[0] type="video/mp4")
				.play-button-overlay
					.fa.fa-play
				a.next(href="/" + adjacent.next.section + "/" + adjacent.next.slug)
					.fa.fa-chevron-right
				a.prev(href="/" + adjacent.prev.section + "/" + adjacent.prev.slug)
					.fa.fa-chevron-left
			.meta
				.title #{title}
					span.date #{date}
					a(href="https://patrickgunderson.com/" + section + "/" + slug).permanent-link
						.fa.fa-bookmark
					
					a(href=external_url).external-link
						.fa.fa-codepen
				.medium #{medium}
				.description #{description}
				.awards 
					each award in awards
						div(class="awards "+ award)
		
		
		include _footer
		script
			include ../js/video-page.js
