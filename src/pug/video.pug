doctype html
html.video-page(lang="en")
	head
		include _head
		link(rel="stylesheet", href="/css/video-page.css")
	body
		include _header
		.media
			.hero(style="background-color:" + background_color)
				video(loop="true" autoplay="true")
					source(src=video[0] type="video/mp4")
				.play-button-overlay
					.fa.fa-play
				include _prev-next
			.meta
				.title #{title}
					span.date #{date}
					a(href="https://patrickgunderson.com/" + section + "/" + slug).permanent-link
						.fa.fa-bookmark
					a(href=external_url).external-link
						-if (external_url.includes("codepen"))
							| See the code 
						.fa.fa-external-link
				.medium #{medium} 
				
				.description #{description}
				-if (roles.length > 0)
					.roles 
						h4 Roles&nbsp;
						div #{roles.join(" - ")}
				.awards 
					each award in awards
						div(class="awards "+ award)
		
		
		include _footer
	script
		include ../js/video-page.js
	script 
		include ../js/kbux.js