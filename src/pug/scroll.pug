doctype html
html
    include _head
    body.scroll-page
        include _header
        .media
            h1 Listing: #{tags}
            ul.list
                each project, index in projects
                    li
                        a(href=["",project.section,project.slug].join("/"))
                            img.main(src=project.images[0])
                            .meta
                                .title #{project.title}
                                    span.date #{project.date}

                    
        
        include _footer
    script